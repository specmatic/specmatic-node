{
    "compilerOptions": {
      "target": "es5",
      "lib": [
        "esnext"
      ],
      "allowJs": true,
      "declaration": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "outDir": "dist",
    },
    // "files": ["global.d.ts"],
    "exclude": ["src/**/__tests__/**/*.ts"],
    "include": [
      "src/**/*.ts"
    ]
}
